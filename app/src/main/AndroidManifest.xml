    package="ar.com.redjar.gym">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AjustesActivity"
            android:label="@string/title_activity_ajustes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RutinasActivity"
            android:label="@string/title_activity_rutinas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MaquinasActivity"
            android:label="@string/title_activity_maquinas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".InstructoresActivity"
            android:label="@string/title_activity_instructores"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PagosActivity"
            android:label="@string/title_activity_pagos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ClienteActivity"
            android:label="@string/title_activity_cliente"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".InfoActivity"
            android:label="@string/title_activity_info"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>